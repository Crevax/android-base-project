<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.github.crevax.androidbase.ui.demo.DemoViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/texview_demo_welcome_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/demo_welcome_message"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="A brief description of the demo's purpose." />

        <EditText
            android:id="@+id/edittext_demo_user_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@={vm.userInput}"
            app:layout_constraintEnd_toEndOf="@+id/texview_demo_welcome_message"
            app:layout_constraintStart_toStartOf="@+id/texview_demo_welcome_message"
            app:layout_constraintTop_toBottomOf="@+id/texview_demo_welcome_message" />


        <Button
            android:id="@+id/button_demo_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/all_submit"
            android:onClick="@{() -> vm.submitText()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edittext_demo_user_text"
            tools:text="submit" />
    </android.support.constraint.ConstraintLayout>
</layout>
